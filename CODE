    $(document).ready(function() {
      $('.menu-toggle').click(function() {
        $('.sidebar').toggle();
      });
      $('.sidebar a').click(function() {
        var target = $(this).attr('href');
        $('section').hide();
        $(target).show();
        if ($(window).width() <= 768) {
          $('.sidebar').hide();
        }
      });
    });
